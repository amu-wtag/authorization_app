<div class="center">
  <h1><%= @post.title %></h1>
  <p><%= @post.body %></p>
  <p>Posted by: <%= @post.user.email %></p>

  <%= link_to 'Back', posts_path %>
  <% if logged_in? && @post.user == current_user %>
    <%= link_to 'Edit', edit_post_path(@post) %>
    <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>

</div>